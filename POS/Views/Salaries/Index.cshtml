@model IEnumerable<POS.Models.Salary>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Employee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CashAdvance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandTotalHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GrandTotalSalary)
            </th>
            <th>Actions </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CashAdvance)
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotalHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrandTotalSalary)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.SalaryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SalaryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SalaryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
