@model IEnumerable<POS.Models.Dtr>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="mb-4">Daily Time Record</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table id="table" class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Employee Code
            </th>
            <th>
                Name
            </th>
            <th>
                Date
            </th>
            <th>
                Time In
            </th>
            <th>
                Time Out
            </th>
            <th>
                Total Hours
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {  
        <tr>
            <td>
                    @Html.DisplayFor(modelItem => item.DtrId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.EmployeeCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DtrDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeIn)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOut)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FormattedHours) Hrs|Min
            </td>
            <td>
                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.DtrId">Edit</a>
                <a class="btn btn-info btn-sm" asp-action="Delete" asp-route-id="@item.DtrId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
